# Configurações do Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=TEST-your-access-token-here
MERCADOPAGO_PUBLIC_KEY=TEST-your-public-key-here

# URLs do projeto
FRONTEND_URL=https://seu-dominio.com
BACKEND_URL=https://api.seu-dominio.com

# Configurações do servidor
PORT=3001
NODE_ENV=development

# Configurações do banco de dados (se usar)
DATABASE_URL=mongodb://localhost:27017/whatsapp-premium
# ou
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=whatsapp_premium
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Configurações de email (se usar)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app

# Configurações do WhatsApp Business API (se usar)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Configurações de segurança
JWT_SECRET=seu-jwt-secret-muito-seguro
ENCRYPTION_KEY=sua-chave-de-criptografia

# Configurações do EasyPanel
EASYPANEL_FTP_SERVER=ftp.seu-dominio.com
EASYPANEL_FTP_USERNAME=usuario-ftp
EASYPANEL_FTP_PASSWORD=senha-ftp

# Webhook secret (para validar webhooks do Mercado Pago)
WEBHOOK_SECRET=seu-webhook-secret